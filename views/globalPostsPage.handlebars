<div style = "text-align:center;">
	{{#if loggedIn}}
		{{#if mine}}
			<a href='/api/posts/' class='NavBar_Links' id = 'show_posts'>All</a>
		{{else}}
			<a href='/api/posts/byuserid/' class='NavBar_Links' id = 'show_posts'>Mine</a>
		{{/if}}
	{{/if}}
</div>
<div class="card_Main">

		{{#each userPosts as |post|}}
			
			<section class = "card_Section">
				<div>Username: {{post.username}}</div>
				<div>Helmet: {{post.helmet}}</div>
				<div>Armor: {{post.armor}}</div>
				<div>Weapon: {{post.weapon}}</div>
				<div>Cape: {{post.cape}}</div>
				<div>About: {{post.about}}</div>
			</section>
		
		{{/each}}

		
</div>

